@model Page

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-info">Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2 text-info">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10 text-info">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2 text-info">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10 text-info">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2 text-info">
            @Html.DisplayNameFor(model => model.Slug)
        </dt>
        <dd class="col-sm-10 text-info">
            @Html.DisplayFor(model => model.Slug)
        </dd>
        <dt class="col-sm-2 text-info">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10 text-info">
            @Html.Raw(Model.Content)
        </dd>
        <dt class="col-sm-2 text-info">
            @Html.DisplayNameFor(model => model.Sorting)
        </dt>
        <dd class="col-sm-10 text-info">
            @Html.DisplayFor(model => model.Sorting)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Edit</a> |
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>
